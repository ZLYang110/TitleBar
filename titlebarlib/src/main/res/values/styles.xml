<resources>

    <style name="actionbarex_common_action_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/actionbarex_common_title_bar_height_def</item>
    </style>

    <style name="actionbarex_common_action_bar_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="actionbarex_common_action_bar_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/actionbarex_common_title_bar_icon_padding_def</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="actionbarex_common_action_bar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/actionbarex_common_title_bar_text_padding_left_def
        </item>
        <item name="android:paddingRight">
            @dimen/actionbarex_common_title_bar_text_padding_right_def
        </item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/actionbarex_common_title_bar_text_color_def</item>
        <item name="android:textSize">@dimen/actionbarex_common_title_bar_text_size_def</item>
    </style>

    <style name="actionbarex_common_action_bar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">@dimen/actionbarex_common_title_bar_title_text_max_width_def
        </item>
        <item name="android:textColor">@color/actionbarex_common_title_bar_title_text_color_def
        </item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/actionbarex_common_title_bar_title_text_size_def</item>
    </style>

    <style name="actionbarex_common_action_bar_title.title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="actionbarex_common_action_bar_title.subtitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxWidth">
            @dimen/actionbarex_common_title_bar_subtitle_text_max_width_def
        </item>
        <item name="android:textColor">@color/actionbarex_common_title_bar_subtitle_text_color_def
        </item>
        <item name="android:textSize">@dimen/actionbarex_common_title_bar_subtitle_text_size_def
        </item>
    </style>

</resources>
